<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageCancelProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:clickable="true"
        android:src="@drawable/cancel"/>

    <EditText
        android:id="@+id/textChangeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:hint="Ваш логин"
        android:textColor="#FFF4B4"
        android:inputType="textEmailAddress"
        android:textSize="40dp" />

    <Button
        android:id="@+id/buttonChangeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Сменить логин"
        android:textSize="30dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/textOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:hint="Старый пароль"
        android:textColor="#FFF4B4"
        android:inputType="textPassword"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/textNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:hint="Новый пароль"
        android:inputType="textPassword"
        android:textColor="#FFF4B4"
        android:textSize="40dp" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Сменить пароль"
        android:textSize="30dp"
        android:singleLine="true"/>

</LinearLayout>