<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".ui.profile_recipes.ProfileRecipeFragment">

    <TextView
        android:id="@+id/textProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Профиль"
        android:gravity="center"
        android:textColor="#FFF4B4"
        android:layout_marginTop="80dp"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Логин"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:textColor="#FFF4B4"
        android:textSize="50dp" />
    <Button
        android:id="@+id/buttonToChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/softRed"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="Сменить логин или пароль"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/purple"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="25dp"
        android:text="Выход из профиля"
        android:textColor="@color/black" />

</LinearLayout>